@model IEnumerable<PruebaTec02EISG.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Carrera</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
          
            <td>
                <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.CarreraId">Editar</a> |
                    <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.CarreraId">Detalle</a> |
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.CarreraId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
