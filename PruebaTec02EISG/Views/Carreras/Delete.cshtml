@model PruebaTec02EISG.Models.Carrera

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar carrera</h1>

<h3>¿Estas seguro de eliminar esta carrera?</h3>
<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarreraId" />
