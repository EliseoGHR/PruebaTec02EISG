@model PruebaTec02EISG.Models.Profesor

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle Profesor</h1>

<div>
    <h4>Profesor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            @{
                string urlBase64 = "";
                if (Model.Imagen != null && Model.Imagen.Length > 0)
                {
                    string base64String = Convert.ToBase64String(Model.Imagen);
                    urlBase64 = "data:image/jpeg;base64," + base64String;
                }
                else
                {
                    // Si no hay imagen, utilizar una imagen por defecto
                    urlBase64 = "/image/defecto.png"; // Ruta relativa desde la carpeta wwwroot
                }
            }
            <img src="@urlBase64" width="125px" height="100px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Carrera)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Carrera.Nombre)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-success" asp-route-id="@Model?.ProfesorId">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
